#ifndef FLIGHTMANAGER_H
#define FLIGHTMANAGER_H

#include "AEROFLOT.h"
// Подключаем заголовочный файл класса AEROFLOT, так как FlightManager работает с объектами этого класса

class FlightManager {
// Объявление класса FlightManager, который управляет коллекцией рейсов
private:  
    AEROFLOT** flights;
    // Динамический массив указателей на объекты AEROFLOT
    // Двойной указатель используется для создания массива указателей   
    int capacity;
    // Текущая вместимость массива (сколько памяти выделено 
    int size;
    // Текущее количество элементов в массиве (сколько фактически занято)

    void resize();
    // Приватный метод для увеличения размера массива при необходимости
    // Вызывается автоматически при добавлении новых элементов
    
    void sortFlights();
    // Приватный метод для сортировки рейсов по названию пункта назначения
    // Вызывается после добавления или редактирования рейсов

public:
    // Публичная секция - доступна извне класса
    
    FlightManager();
    // Конструктор по умолчанию - инициализирует начальные значения
    
    ~FlightManager();
    // Деструктор - освобождает выделенную память
    
    void addFlight();
    // Метод для добавления нового рейса в коллекцию
    // Запрашивает данные у пользователя и добавляет новый объект
    
    void editFlight();
    // Метод для редактирования существующего рейса
    // Позволяет изменить данные любого рейса по выбору пользователя
    
    void deleteFlight();
    // Метод для удаления рейса из коллекции
    // Удаляет выбранный пользователем рейс
    
    void displayAllFlights();
    // Метод для отображения всех рейсов
    // Выводит полную информацию о всех рейсах в отсортированном порядке
    
    void searchByAircraftType();
    // Метод для поиска рейсов по типу самолета
    // Запрашивает тип самолета и выводит все рейсы с этим типом
    
    void runMenu();
    // Главный метод, запускающий пользовательское меню
    // Содержит основной цикл программы и обработку выбора пользователя
};

#endif
// Конец защиты от повторного включения
